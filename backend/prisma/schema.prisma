datasource db {
  provider = "postgresql"
}

generator client {
  provider     = "prisma-client-js"
  engineType   = "client"
  moduleFormat = "cjs"
}

model Organization {
  id String @id @default(uuid())

  inn  String @unique
  ogrn String @unique

  name        String
  address     String
  description String?
  logo        String?

  sortIndex Int @default(500) @map("sort_index")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  resources Resource[]

  @@map("organizations")
}

model ResourceCategory {
  id String @id @default(uuid())

  name  String @unique
  label String

  sortIndex Int @default(500) @map("sort_index")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  resources Resource[]

  @@map("resource_categories")
}

model Resource {
  id String @id @default(uuid())

  name        String
  link        String
  contacts    String?
  description String?

  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Restrict)

  categoryId String           @map("category_id")
  category   ResourceCategory @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  isPrivate Boolean @default(false) @map("is_private")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([organizationId, name])
  @@map("resources")
}

model Role {
  id String @id @default(uuid())

  name        String  @unique
  label       String
  description String?

  users User[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

model User {
  id String @id @default(uuid())

  firstName  String  @map("first_name")
  lastName   String  @map("last_name")
  patronymic String?
  email      String  @unique
  password   String
  phone      String
  isBanned   Boolean @default(false) @map("is_banned")

  roleId String @map("role_id")
  role   Role   @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([email])
  @@map("users")
}

model Alert {
  id String @id @default(uuid())

  message  String
  isActvie Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("alerts")
}
